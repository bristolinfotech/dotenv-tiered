{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "outDir": "lib",
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost",
      "es2017.object"
    ],
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "allowJs": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}
